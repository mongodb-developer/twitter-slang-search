use("synonyms");

db.tweets.aggregate([
    {
        "$search": {
            "index": "synsearch",
            "text": {
                "query": "periodt",
                "path": "full_text",
                "synonyms": "slang"
            }
        }
    },
    {
        "$project": {
            "_id": 1,
            "full_text": 1,
            "username": "$user.screen_name"
        }
    }
]);